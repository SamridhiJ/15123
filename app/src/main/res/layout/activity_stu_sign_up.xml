<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.login.StuSignUp">
    <TextView
        android:id="@+id/studentheading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/stunext"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/stunext"
        android:layout_marginTop="18dp"
        android:text="TextView" />
    <EditText
        android:id="@+id/stutName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/studentheading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Enter Name"
        android:inputType="textPersonName"
        android:text="" />
    <EditText
        android:id="@+id/stupass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/stutName"
        android:layout_alignStart="@+id/stutName"
        android:layout_below="@+id/stutName"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:text="" />
    <EditText
        android:id="@+id/stuemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/stupass"
        android:layout_alignStart="@+id/stupass"
        android:layout_below="@+id/stupass"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Enter E-mail"/>
    <EditText
        android:id="@+id/sturoll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/stuemail"
        android:layout_alignStart="@+id/stuemail"
        android:layout_below="@+id/stuemail"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Enter Roll No."/>
    <Button
        android:id="@+id/stunext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:onClick="stsubmit"
        android:text="Next"
        />
    <Spinner
        android:id="@+id/spinneryear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spinnersection"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp" />
    <Spinner
        android:id="@+id/spinnersection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/stunext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="45dp" />
</RelativeLayout>
